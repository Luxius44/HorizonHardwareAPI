// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./maDB.db"
}

model Admin {
  login   String  @id
  password    String
  token       String
}

model Categorie {
  id    Int @id @default(autoincrement())
  nom   String
  imgId String
  deals Deal[]
}

model Deal {
  id    Int @id @default(autoincrement())
  cat   Categorie @relation(fields: [catId],references: [id])
  catId    Int
  nom     String
  prix    Float
  promo   Float
  date    DateTime
  detail    String
  imgId   String
  urlWeb   String
}

model Article {
  id Int @id @default(autoincrement())
  titre String 
  description String
  contenu String
  imgId String
  tag String
  tags  String
  date DateTime
}
