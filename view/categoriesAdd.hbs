<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/public/css" rel="stylesheet">
    <title>Hardware Horizon | Categories</title>

</head>
<body>
    <div class="navbar">
        <div class="logo">
            <a href="/panel/home"><img src="/public/img/logo" alt=""></a>
        </div>
        <div class="lien">
            <a href="/panel/deals">Deals</a>
            <a href="/panel/categories">Cat√©gories</a>
            <a href="/panel/articles">Articles</a>
            <a href="/panel/autres">Autres</a>
        </div>
    </div>

    <form class="addCategorie" action="/panel/addCategorie" method="POST" enctype="multipart/form-data">
        <div>
            <label for="nom">Nom :</label>
            <input type="text" id="nom" name="nom">
        </div>
        <div>
            <label for="image">Image :</label>
            <input type="file" id="image" name="image" accept="image/png,image/jpeg" onchange="previewImage()">
        </div>
        <img id="image-preview" src="#" alt="Image preview">
        <button type="submit" value="Add Categorie">Add Categorie</button>
        <a href="/panel/categoires">Cancel ?</a>
        {{message}}
    </form>
</body>
</html>


<script>
    function previewImage() {
    var preview = document.querySelector('#image-preview');
    var file = document.querySelector('#image').files[0];
    var reader = new FileReader();

    reader.addEventListener("load", function () {
        preview.src = reader.result;
    }, false);

    if (file) {
        reader.readAsDataURL(file);
    }
}
</script>